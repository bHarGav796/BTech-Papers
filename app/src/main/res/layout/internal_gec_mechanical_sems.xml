<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:background="#ffffff"
    android:id="@+id/GECMechanicalSems">


    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="#fff">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GEC Mechanical Engineering Semesters"
                    android:textSize="22dp"
                    android:textColor="#000"
                    android:fontFamily="@font/comfortaa_light"
                    android:textStyle="bold"/>

            </LinearLayout>


            <Button
                android:id="@+id/JEC_1st_Sem"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/purple_500"
                android:fontFamily="@font/comfortaa_light"
                android:text="1st Semester"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold"
                android:onClick="internal_GEC_Mech_1"
                app:icon="@drawable/pedef" />

            <Button
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/pedef"
                android:background="@drawable/custom_button"
                android:id="@+id/JEC_2st_Sem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:text="2nd Semester"
                android:textColor="#fff"
                android:textSize="25sp"
                android:onClick="internal_GEC_Mech_2"
                android:layout_marginTop="25dp"
                android:textStyle="bold"/>

            <Button
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/pedef"
                android:background="@drawable/custom_button"
                android:id="@+id/JEC_3rd_Sem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:text="3rd Semester"
                android:onClick="internal_GEC_Mech_3"
                android:textColor="#fff"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"/>

            <Button
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/pedef"
                android:background="@drawable/custom_button"
                android:id="@+id/JEC_4th_Sem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:text="4th Semester"
                android:onClick="internal_GEC_Mech_4"
                android:textColor="#fff"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"/>

            <Button
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/pedef"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/holo_green"
                android:id="@+id/JEC_5th_Sem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:text="5th Semester"
                android:onClick="internal_GEC_Mech_5"
                android:textColor="#fff"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"/>

            <Button
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/pedef"
                android:background="@drawable/custom_button"
                android:id="@+id/JEC_6th_Sem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:text="6th Semester"
                android:textColor="#fff"
                android:textSize="25sp"
                android:onClick="internal_GEC_Mech_6"
                android:layout_marginTop="25dp"
                android:textStyle="bold"/>

            <Button
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/pedef"
                android:background="@drawable/custom_button"
                android:id="@+id/JEC_7th_Sem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:text="7th Semester"
                android:textColor="#fff"
                android:textSize="25sp"
                android:onClick="internal_GEC_Mech_7"
                android:layout_marginTop="25dp"
                android:textStyle="bold"/>

            <Button
                style="@style/Widget.MaterialComponents.Button.Icon"
                app:icon="@drawable/pedef"
                android:background="@drawable/custom_button"
                android:id="@+id/JEC_8th_Sem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_light"
                android:text="8th Semester"
                android:textColor="#fff"
                android:textSize="25sp"
                android:onClick="internal_GEC_Mech_8"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="45dp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>



    </ScrollView>
</RelativeLayout>
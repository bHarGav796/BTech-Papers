<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true">


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#FFFFFF">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Engineering Branches"
                    android:textSize="25dp"
                    android:textColor="#000"
                    android:fontFamily="@font/comfortaa_light"
                    android:textStyle="bold"/>
                <!--            <TextView-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="@string/tag_line"-->
                <!--                android:textStyle="bold"-->
                <!--                android:textColor="#272727"-->
                <!--                android:fontFamily="@font/comfortaa_light"-->
                <!--                android:layout_marginTop="10dp"/>-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/red_gradient"
                        android:onClick="mechanicalclick"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/t1mechanical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/comfortaa_light"
                            android:text="Mechanical \nEngineering"
                            android:textColor="#fff"
                            android:textSize="23sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_alignParentRight="true"
                            android:maxHeight="100dp"
                            android:src="@drawable/mechanical_image" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginTop="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/teal_gradient"
                            android:onClick="electricalclick"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/t2electrical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/comfortaa_light"

                                android:text="Electrical \nEngineering"
                                android:textColor="#fff"
                                android:textSize="23sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:layout_alignParentRight="true"
                                android:maxHeight="100dp"
                                android:src="@drawable/electrical" />



                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="20dp">

                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/mast_gradient"
                                android:onClick="civilclick"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/t3civil"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/comfortaa_light"

                                    android:text="Civil \nEngineering"
                                    android:textColor="#fff"
                                    android:textSize="23sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:maxHeight="100dp"
                                    android:src="@drawable/civil" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                app:cardCornerRadius="15dp"
                                android:layout_marginTop="20dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/orange_gradient"
                                    android:onClick="ETCclick"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/t4electronics"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/comfortaa_light"

                                        android:text="Electronics \nEngineering"
                                        android:textColor="#fff"
                                        android:textSize="23sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="150dp"
                                        android:layout_height="100dp"
                                        android:layout_alignParentRight="true"
                                        android:maxHeight="100dp"
                                        android:src="@drawable/etc" />

                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>



                        </LinearLayout>






                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                app:cardCornerRadius="15dp"
                                android:layout_marginTop="20dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/green_gradient"
                                    android:onClick="CSEClick"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/t5computer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/comfortaa_light"

                                        android:text="Computer \nEngineering"
                                        android:textColor="#fff"
                                        android:textSize="23sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="150dp"
                                        android:layout_height="100dp"
                                        android:layout_alignParentRight="true"
                                        android:maxHeight="100dp"
                                        android:src="@drawable/computer" />

                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>



                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                app:cardCornerRadius="15dp"
                                android:layout_marginTop="20dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_style"
                                    android:onClick="chemicalclick"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/t6chemical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/comfortaa_light"

                                        android:text="Chemical \nEngineering"
                                        android:textColor="#fff"
                                        android:textSize="23sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="150dp"
                                        android:layout_height="100dp"
                                        android:layout_alignParentRight="true"
                                        android:maxHeight="100dp"
                                        android:src="@drawable/chem2" />

                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>



                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="48dp"
                            android:orientation="vertical">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                app:cardCornerRadius="15dp"
                                android:layout_marginTop="20dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/purple_gradient"
                                    android:onClick="Instruclick"
                                    android:padding="10dp">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/comfortaa_light"

                                        android:text="Instrumentation \nEngineering"
                                        android:textColor="#fff"
                                        android:textSize="23sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="150dp"
                                        android:layout_height="100dp"
                                        android:layout_alignParentRight="true"
                                        android:maxHeight="100dp"
                                        android:src="@drawable/mechanical_image" />

                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>



                        </LinearLayout>





                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>




    </ScrollView>


    <!--    Admob Banner Ads-->

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5384391241230668/1508892713">

    </com.google.android.gms.ads.AdView>


</RelativeLayout>